{
  "name": "case-template",
  "version": "1.0.0",
  "type": "module",
  "description": "靜態切版專用打包工具",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 4173",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint \"src/assets/scss/**/*.scss\" --fix",
    "lint:js": "eslint \"src/assets/js/**/*.js\" --fix",
    "lint:check": "npm run lint:css:check && npm run lint:js:check",
    "lint:css:check": "stylelint \"src/assets/scss/**/*.scss\"",
    "lint:js:check": "eslint \"src/assets/js/**/*.js\"",
    "format": "prettier --write \"**/*.{js,scss,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,scss,css,html,json,md}\"",
    "typecheck": "echo \"TypeScript checking not configured\"",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rm -rf dist node_modules/.vite",
    "reinstall": "npm run clean && npm install",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lighthouse": "lighthouse http://localhost:4173 --output=html --output-path=./lighthouse-report.html",
    "optimize:images": "echo \"Image optimization not configured\"",
    "validate:html": "html-validate \"pages/**/*.html\"",
    "accessibility": "pa11y-ci --sitemap http://localhost:4173/sitemap.xml",
    "pre-commit": "npm run lint:check && npm run format:check && npm run validate:html",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:clean": "npm run build && gh-pages -d dist -f"
  },
  "keywords": [
    "static",
    "template",
    "bootstrap",
    "scss",
    "vite"
  ],
  "author": "OneLiang",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-legacy": "^7.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "gh-pages": "^6.3.0",
    "html-validate": "^8.24.2",
    "lighthouse": "^12.2.1",
    "pa11y-ci": "^3.1.0",
    "prettier": "^3.4.2",
    "sass": "^1.89.2",
    "stylelint": "^16.12.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "vite": "^7.0.3",
    "vite-bundle-analyzer": "^0.18.0",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  }
}
